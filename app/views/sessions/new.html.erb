<% if flash[:errors] %>
<% flash[:errors].each do |error| %>
<li style='color:red;'><%= error %></li>
</ul>
<% end %>
<% end %>

<%= form_with url: sessions_path, local: true do |f| %>
<%= f.label :user_name %>
<%= f.text_field :user_name %>
<%= f.label :password %>
<%= f.password_field :password %>
<%= f.submit "Log In" %>
<% end %>
