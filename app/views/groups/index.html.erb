<div class="w-100 p-3" style="background-color: #eee;opacity: .7;">
<br><h1>Groups:</h1>


<ul>
<% @groups.each do |group| %>
  <%= form_for group, method: :delete do |f| %>
  <li> <%= link_to group.name, group %> </li>
   <% if group.creator_id == @logged_in_user.id %>
   <br><%= f.submit "Delete" %>
  <% end %>
<% end %>
<% end %>
</ul>


<%= button_to "Create new group", new_group_path, method: :get %>
</div>
