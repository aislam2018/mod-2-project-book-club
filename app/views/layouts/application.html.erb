<!DOCTYPE html>
<html>
  <head>
    <title>Mod2ProjectBookClub</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="background-overlay">
    </div>
    <header>

      <% if @logged_in_user %>
    <h1>  Welcome back, <%= @logged_in_user.user_name %></h1>
    <% end %>

      <% if @errors %>
        <ul class="errors">
            <% @errors.each do |error| %>
              <li>
                <%= error %>
              </li>
          <% end %>
        </ul>
        <% end %>
    </header>
<% if @logged_in_user %>
<div class="container">
  <div class="row">

    <%= button_to "groups", groups_path, method: :get %>

    <%= button_to "profile", "/users/#{@logged_in_user.id}", method: :get  %>
    <%= button_to "books", books_path, method: :get  %>
    <%= button_to "log out", pages_path, method: :get   %>
<% end %>

</div>
</div>
    <%= yield %>
</body>
</html>
